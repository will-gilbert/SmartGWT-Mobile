<?xml version="1.0" encoding="UTF-8"?>
<module rename-to="app">

    <!-- GWT Framework to load                                            -->
    <inherits name="com.smartgwt.mobile.SmartGwtMobile"/>

    <!-- Limit the target browsers: See 'gradle.properties' file          -->
    <set-property name="user.agent" value="@user.agent@"/>

    <!-- Class which implements EntryPoint                                -->
    <entry-point class='com.smartgwt.mobile.showcase.client.Showcase'/>

    <!-- Specify the paths containing Java to JavaScript code             -->
    <source path='com/smartgwt/mobile/showcase/client'/>


</module>
